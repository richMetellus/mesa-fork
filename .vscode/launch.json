{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Local AMD64",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-local/bin/CIMMesa",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-debug-amd64-local"
        },
        {
            "name": "Torizon ARMv7",
            "type": "cppdbg",
            "request": "launch",
            "program": "${config:torizon_app_root}/CIMMesa",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${config:torizon_app_root}",
            "environment": [],
            "externalConsole": false,
            "internalConsoleOptions": "openOnSessionStart",
            "sourceFileMap": {
                "${config:torizon_app_root}": "${workspaceFolder}"
            },
            "pipeTransport": {
                "debuggerPath": "/usr/bin/gdb",
                "pipeProgram": "ssh",
                "pipeArgs": [
                    "-T",
                    "-q",
                    "-p",
                    "${config:torizon_debug_ssh_port}",
                    "-i",
                    "${workspaceFolder}/.conf/id_rsa", // ssh key path
                    "-o",
                    "StrictHostKeyChecking=no",
                    "-o",
                    "UserKnownHostsFile /dev/null",
                    "${config:torizon_run_as}@${config:torizon_ip}" // user@device
                ]
            },
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "deploy-torizon-arm"
        },
        {
            "name": "Torizon ARMv8",
